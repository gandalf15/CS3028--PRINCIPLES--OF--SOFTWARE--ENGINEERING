#!/bin/bash
# Description: Shell-script to start rails server

export APP_PORT=80
export APP_BIND='0.0.0.0'

read -r -p "Would you like to rebuild the docker image? [y/N] "
if [[ $response =~ ^([yY][eE][sS]|[yY]) ]]
then
  docker-compose build
fi

read -r -p "Would you like to run \"rails db:create || rails db:migrate\"? [y/N] "
if [[ $response =~ ^([yY][eE][sS]|[yY]) ]]
then
  docker-compose run lacrdemo rails db:create || rails db:migrate
fi

docker-compose up
