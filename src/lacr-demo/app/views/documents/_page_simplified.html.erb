<div class="col-md-12">

  <% @documents.each do |document| %>
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="row">
					<div class="col-md-4">
						<strong>ID: </strong><span class="entry"><%= document.entry %></span>
					</div>
					<div class="col-md-4">
						<strong>Date: </strong><span class="date"><% if document.date_incorrect %><%= document.date_incorrect %><% else %><%= document.date %><% end %></span>
					</div>
					<div class="col-md-4">
						<strong>Language: </strong><span class="language"><%= document.lang %></span>
					</div> <!-- col-md-4 -->
				</div> <!-- row -->
			</div>  <!-- panel-heading -->
			<div class="panel-body">
				<pre class="prettyprint transcription" style="display: none;"><code class="language-xml"><%= document.tr_paragraph.content_xml.gsub(/^\s+/, ' ')%></code></pre>
				<div class="transcription">
					<%= document.tr_paragraph.content_html.html_safe %>
				</div>
			</div> <!-- panel-body -->
		</div> <!-- panel panel-primary -->
  <% end %>
</div> <!-- col-md-6 -->
