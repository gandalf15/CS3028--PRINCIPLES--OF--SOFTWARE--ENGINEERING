	<div class="container">
		<!-- Left Side: Text contet -->
		<div class="<% if @document_image_normal %>col-md-6<%else%>col-md-10<%end%>">

      <% @documents.each do |document| %>
				<div class="panel panel-primary">
					<div class="panel-heading">
						<div class="row">
							<div class="col-md-4">
								<strong>ID: </strong><span class="entry"><%= document.entry %></span>
							</div>
							<div class="col-md-4">
								<strong>Date: </strong><span class="date"><% if document.date_incorrect %><%= document.date_incorrect %><% else %><%= document.date %><% end %></span>
							</div>
							<div class="col-md-4">
								<strong>Language: </strong><span class="language"><%= document.lang %></span>
							</div> <!-- col-md-4 -->
						</div> <!-- row -->
					</div>  <!-- panel-heading -->
					<div class="panel-body">
						<pre class="prettyprint transcription" style="display: none;"><code class="language-xml"><%= document.tr_paragraph.content_xml.gsub(/^\s+/, ' ')%></code></pre>
						<div class="transcription">
							<%= document.tr_paragraph.content_xml.html_safe %>
						</div>
						<div class="panel-footer">
							<button class="btn btn-sm" onclick="toggle_xml(this);">XML</button>
						</div>
					</div> <!-- panel-body -->
				</div> <!-- panel panel-primary -->
      <% end %>

		</div> <!-- col-md-6 -->
		<!-- End of the left side -->

		<!-- Right Side: Image -->
    <% if @document_image_normal %>
			<div class="col-md-6">
				<span class='zoom' id="doc-image">
					<%= image_tag(@document_image_normal, class:"img-rounded img-responsive", data:	{large_image: @document_image_large}) %>
				</span>
			</div> <!-- col-md-6 -->
    <% end %>
		<!-- End of the right side -->
	</div> <!-- container -->
