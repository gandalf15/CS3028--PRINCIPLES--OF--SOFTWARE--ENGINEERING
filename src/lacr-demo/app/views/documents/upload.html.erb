<div class="container text-center">
  <h1>Uploaded files</h1>
  <div class="row">
    <div class="col-md-6">
      <% if @succesfully_uploaded[:xml].length > 0 %>
        <p>The following XML files have been uploaded succesfully:</p>
        <% @succesfully_uploaded[:xml].each do |filename| %>
        <p><%= filename %></p>
        <% end %>
      <% else %>
        <p>No XML files have been uploaded.</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <% if @succesfully_uploaded[:xml].length > 0 %>
        <p>The following Image files have been uploaded succesfully:</p>
        <% @succesfully_uploaded[:image].each do |filename| %>
        <p><%= filename %></p>
        <% end %>
      <% else %>
        <p>No image files have been uploaded.</p>
      <% end %>

    </div>
  </div>

</div>
