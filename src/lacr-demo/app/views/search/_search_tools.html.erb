<div class="row">
  <div class="col-md-6 col-md-offset-3" id="search_tools">

    <div class="dropdown col-xs-3">
      <a class="dropdown-toggle" data-toggle="dropdown">Search Method</a>
      <ul class="dropdown-menu">
        <li <%if @searchMethod == 0%>class="active"<%end%>><a href="#"onclick="insertParam('sm', 0, 'page')">Keywords</a></li>
        <li <%if @searchMethod == 1%>class="active"<%end%>><a href="#"onclick="insertParam('sm', 1, 'page')">Phrase</a></li>
        <li <%if @searchMethod == 2%>class="active"<%end%>><a href="#"onclick="insertParam('sm', 2, 'page')">Word start</a></li>
        <li <%if @searchMethod == 3%>class="active"<%end%>><a href="#"onclick="insertParam('sm', 3, 'page')">Word middle</a></li>
        <li <%if @searchMethod == 4%>class="active"<%end%>><a href="#"onclick="insertParam('sm', 4, 'page')">Word end</a></li>
      </ul>
    </div>

    <div class="dropdown col-xs-3">
      <a class="dropdown-toggle" data-toggle="dropdown">Spelling Variants</a>
      <ul class="dropdown-menu">
        <li <%if @misspellings == 0%>class="active"<%end%>><a href="#" onclick="insertParam('m', 0, 'page')">0</a></li>
        <li <%if @misspellings == 1%>class="active"<%end%>><a href="#" onclick="insertParam('m', 1, 'page')">1</a></li>
        <li <%if @misspellings == 2%>class="active"<%end%>><a href="#" onclick="insertParam('m', 2, 'page')">2</a></li>
        <li <%if @misspellings == 3%>class="active"<%end%>><a href="#" onclick="insertParam('m', 3, 'page')">3</a></li>
        <li <%if @misspellings == 4%>class="active"<%end%>><a href="#" onclick="insertParam('m', 4, 'page')">4</a></li>
        <li <%if @misspellings == 5%>class="active"<%end%>><a href="#" onclick="insertParam('m', 5, 'page')">5</a></li>
      </ul>
    </div>

    <div class="dropdown col-xs-3">
      <a class="dropdown-toggle" data-toggle="dropdown">Results Per Page</a>
      <ul class="dropdown-menu">
        <li <%if @results_per_page == 5 %>class="active"<%end%>><a href="#" onclick="insertParam('r',5,'page');">5</a></li>
        <li <%if @results_per_page == 10 %>class="active"<%end%>><a href="#" onclick="insertParam('r',10,'page');">10</a></li>
        <li <%if @results_per_page == 20 %>class="active"<%end%>><a href="#" onclick="insertParam('r',20,'page');">20</a></li>
        <li <%if @results_per_page == 30%>class="active"<%end%>><a href="#" onclick="insertParam('r',30,'page');">30</a></li>
        <li <%if @results_per_page == 50 %>class="active"<%end%>><a href="#" onclick="insertParam('r',50,'page');">50</a></li>
      </ul>
    </div>

    <div class="dropdown col-xs-3">
      <a class="dropdown-toggle" data-toggle="dropdown">Order By</a>
      <ul class="dropdown-menu">
        <li <%if @orderBy == 0%>class="active"<%end%>><a href="#"onclick="insertParam('o', 0, 'page')">Relevance</a></li>
        <li <%if @orderBy == 1%>class="active"<%end%>><a href="#"onclick="insertParam('o', 1, 'page')">Volume, Page ascending</a></li>
        <li <%if @orderBy == 2%>class="active"<%end%>><a href="#"onclick="insertParam('o', 2, 'page')">Volume, Page descending</a></li>
        <li <%if @orderBy == 3%>class="active"<%end%>><a href="#"onclick="insertParam('o', 3, 'page')">Chronological</a></li>
      </ul>
    </div>

  </div>
</div>
