<!DOCTYPE html>
<html lang="en">
  <head>
    <title>AberdeenLawProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= yield :stylesheet_includes %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to "Aberdeen Council Registers", root_url, class: "navbar-brand" %>
            </div>


            <form class="navbar-form navbar-left" action="/search" method="get">
              <div class="input-group">
                <input type="text" class="form-control" name="q" id="search" placeholder="Search for..." <% if params[:q].present? %> value="<%= params[:q]%>" <%end%>>
                <div class="input-group-btn">
                  <button class="btn btn-default" type="submit">
                    <i class="fa fa-search" aria-hidden="true"></i>
                  </button>
                </div>
              </div>
            </form>


            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <%= link_to "Documents", doc_path %>
                    </li>
                    <li>
                      <%= link_to "About", about_path %>
                    </li>
                    <li>
                      <%= link_to "Contact", contact_path %>
                    </li>
                    <!-- display only if user is logged in or show sign in link-->
                     <!-- if user_signed_in? -->
                      <!-- <li> -->
                        <!-- Welcome  current_user.email  -->
                      <!-- </li>
                      <li> -->
                         <!-- link_to 'edit profile', edit_user_registration_path(current_user)  -->
                      <!-- </li>
                      <li> -->
                         <!-- link_to 'logout', eval("destroy_#{current_user.type.downcase}_session_path"), method: :delete  -->
                      <!-- </li> -->
                    <!-- else  -->
                      <li>
                         <!-- link_to 'Log in', new_user_session_path -->
                         <%= link_to 'Log in', '/' %>
                      </li>
                      <li>
                        <%= link_to 'Register', '/' %>
                        <!-- link_to 'Register', new_user_registration_path  -->
                      </li>

                    <!-- end  -->
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- flash messages -->
    <div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <!-- Full Width Image Header -->
    <%= yield :header %>
    <!-- Page Content -->
          <%= yield %>

    <!-- Footer -->
    <footer class="footer navbar-fixed-bottom">
      <div class="container">
        <p class="text-center">Copyright &copy; Aberdeen Concul Registers 2017</p>
      </div>
    </footer>

<%= yield :javascript_includes %>

<script>
  var autocomplete = new Bloodhound({
    datumTokenizer: Bloodhound.tokenizers.whitespace,
    queryTokenizer: Bloodhound.tokenizers.whitespace,
    remote: {
      url: '/search/autocomplete?query=%QUERY',
      wildcard: '%QUERY'
    }
  });
  $('#search').typeahead(null, {
    source: autocomplete
  });
</script>

</body>
</html>
