<!DOCTYPE html>
<html>
  <head>
    <title>LacrDemo</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= yield :stylesheet_includes %>
    <%= javascript_include_tag 'application'%>

  </head>

  <body>
  <!-- Navigation -->
  <% if current_page?(root_path) %>
  <%= render 'layouts/menu/main-index' %>
  <% else %>
  <%= render 'layouts/menu/main' %>
  <% end %>
  <%= render 'layouts/menu/flash_messages' %>
  <%= yield :before_container %>
  <%= yield %>
  <!-- Footer -->
  <%= render 'layouts/menu/footer' %>
  <%= yield :javascript_includes %>
  </body>
</html>
