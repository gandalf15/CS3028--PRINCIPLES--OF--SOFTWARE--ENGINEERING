
 <% if notice %>
   <div class="alert alert-info notice">
       <p><%= notice %></p>
   </div>
   <script type="text/javascript">
   $('.notice').hide();
   n = noty({text: '<div class="notification-notice container"><%= notice %></div>',
             layout: 'topRight',
             timeout: 5000,
             type: 'information'});

   </script>
 <% end %>
