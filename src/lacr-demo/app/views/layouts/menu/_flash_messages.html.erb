   <div class="alert alert-info">
     <p><%= alert %></p>
   </div>
   <script type="text/javascript">
   $('.alert').hide();
   n = noty({text: '<div class="notification-alert container"><%= alert %></div>',
             layout: 'topRight',
             timeout: 5000,
             type: 'information'});

   </script>
 <% end %>
